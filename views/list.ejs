<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ToDo List</title>
    <link rel="stylesheet" href="css/style.css">
</head>

<body>
    <div class="box">
        <h1>Smart Task Schedular</h1>
    </div>
    <div class="box">

        <% ejes.forEach(function(items) { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox1" value="<%= items._id %>" onchange="this.form.submit()">
                    <p>
                        <%= items.name %>
                    </p>
                </div>
            </form>
            <% }); %>
                <form action="/" method="post">
                    <input type="text" name="ele1" placeholder="Enter a new task">
                    <button type="submit">+</button>
                </form>
    </div>
</body>

</html>
